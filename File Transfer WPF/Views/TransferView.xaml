<UserControl x:Class="File_Transfer_WPF.Views.TransferView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:cal="http://www.caliburnproject.org" 
      xmlns:local="clr-namespace:File_Transfer_WPF.Views"
      mc:Ignorable="d"
      d:DesignHeight="550" d:DesignWidth="900" Background="#FF221F1F" MinWidth="900" MinHeight="550">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label Content="Source Folder Path"
                       HorizontalAlignment="Left"
                       Padding="15,15,0,15"
                       FontSize="20"
                       Foreground="White"/>
                <TextBox Width="400" 
                         Height="30" 
                         Padding="0,0,0,0" 
                         Margin="0,0,0,0"
                         Background="#FFEFEFEF" 
                         BorderBrush="Black"
                         FontSize="20"
                         Foreground="Black"/>
                <Button x:Name="SourceBrowseButton" 
                        Content="Browse..." 
                        Width="65"
                        Height="30"
                        HorizontalAlignment="Right"
                        Margin="0,-30,0,0"
                        Padding="0,0,0,0">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <cal:ActionMessage MethodName="BrowseClick"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label Content="Target Folder Path"
                       HorizontalAlignment="Left"
                       Padding="15,15,0,15"
                       FontSize="20"
                       Foreground="White"/>
                <TextBox Width="400" 
                         Height="30" 
                         Padding="0,0,0,0" 
                         Background="#FFEFEFEF" 
                         BorderBrush="Black"
                         FontSize="20"
                         Foreground="Black"/>
                <Button Content="Browse..." 
                        Width="65"
                        Height="30"
                        HorizontalAlignment="Right"
                        Margin="0,-30,0,0"
                        Padding="0,0,0,0"
                        />
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
