<UserControl x:Class="File_Transfer_WPF.Views.TransferView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:cal="http://www.caliburnproject.org"
      xmlns:local="clr-namespace:File_Transfer_WPF.Views"
      
      mc:Ignorable="d"
      d:DesignHeight="550" d:DesignWidth="900" Background="#FF221F1F" MinWidth="900" MinHeight="550">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--#region left panel-->
        <Grid Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <!--#region Source folder path selection area-->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2.5*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Label Content="Source Folder Path"
                               Foreground="White"
                               FontSize="20"
                               VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top"
                                Margin="10 0">
                        <TextBox x:Name="SourceFolderPath"
                                 Width="400"
                                 Height="30"
                                 FontSize="15"
                                 Foreground="Black"
                                 BorderBrush="Black"
                                 Background="#FFEFEFEF"
                                 IsReadOnly="True"/>
                        <Button x:Name="SourceBrowseButton"
                                Content="Browse..."
                                Width="65"
                                Height="30">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <cal:ActionMessage MethodName="SourceBrowseClick"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <Label Content="Files Found:"
                               Foreground="White"
                               FontSize="15"/>
                        <Label x:Name="SourceFileCount"
                               Foreground="White"
                               FontSize="15"/>
                    </StackPanel>
                </Grid>
                <!--#endregion Source folder path selection area-->
                <!--#region  Target folder path selection area-->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2.5*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Label Content="Target Folder Path"
                               Foreground="White"
                               FontSize="20"
                               VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top"
                                Margin="10 0">
                        <TextBox x:Name="TargetFolderPath"
                                 Width="400"
                                 Height="30"
                                 FontSize="15"
                                 Foreground="Black"
                                 BorderBrush="Black"
                                 Background="#FFEFEFEF"
                                 IsReadOnly="True"/>
                        <Button x:Name="TargetBrowseButton"
                                Content="Browse..."
                                Width="65"
                                Height="30">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <cal:ActionMessage MethodName="TargetBrowseClick"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <Label Content="Files Found:"
                               Foreground="White"
                               FontSize="15"/>
                        <Label x:Name="TargetFileCount"
                               Foreground="White"
                               FontSize="15"/>
                    </StackPanel>
                </Grid>
                <!--#endregion target folder selection area-->
                <!--#region File viewer/error view panel-->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="6*"/>
                    </Grid.RowDefinitions>
                    <!-- error message panel-->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal">
                        <Label x:Name="ErrorMessage"
                               Foreground="LightCoral"
                               FontSize="25"
                               Margin="20 0 0 0"/>
                    </StackPanel>
                    <!-- file view area -->
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal">
                        <ListBox x:Name="SourceFilesList"
                                 Width="285"
                                 Height="200"
                                 Margin="20 5 0 0"/>
                        <Label Content=">>>"
                               Foreground="White"
                               FontSize="35"
                               VerticalAlignment="Center"/>
                        <ListBox x:Name="TargetFilesList"
                                 Width="285"
                                 Height="200"/>
                    </StackPanel>
                </Grid>
                <!--#endregion File viewer/error view panel-->
            </Grid>
        </Grid>
        <!--#endregion-->
        <!--#region right panel-->
        <Grid Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="7.5*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region extensions table -->
                <StackPanel Grid.Row="0"
                            Orientation="Vertical"
                            Background="White"
                            >
                    <Label Content="File Types:"/>
                    <TextBlock Text="*Please select the file types you want to transfer."
                           FontSize="8"
                           TextWrapping="Wrap"
                           />
                    <ListView x:Name="Files"
                              BorderBrush="White"
                              Background="LightGray">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="True" 
                                              Height="15"
                                              Width="15"
                                              VerticalAlignment="Center"
                                              cal:Message.Attach="[Event Click] = [Action UpdateFileList($dataContext)]"/>
                                    <TextBlock Text="{Binding Extension}"
                                               Margin="8 3 0 3"
                                               FontSize="18"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <!--#endregion-->
                <!--#region transfer button -->
                <StackPanel Grid.Row="1"
                            Orientation="Vertical">
                    <Button x:Name="TransferButton"
                            Content="Transfer"
                            Width="120"
                            Height="45"
                            FontSize="25"
                            Margin="10"
                            Background="White"
                            Foreground="Black">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <cal:ActionMessage MethodName="TransferClick"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </StackPanel>
                <!--#endregion-->
            </Grid>
        </Grid>
        <!--#endregion right panel-->
    </Grid>
</UserControl>
